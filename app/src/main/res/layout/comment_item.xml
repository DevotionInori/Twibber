<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.SydShp.twibber.NiceImageView
        android:id="@+id/icAvatar_comment_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_me"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:is_circle="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/nameText_comment_item"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="昵称"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="left|center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_change"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icAvatar_comment_item"/>


    <TextView
        android:id="@+id/twibber_comment_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_change"
        app:layout_constraintTop_toBottomOf="@id/icAvatar_comment_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>